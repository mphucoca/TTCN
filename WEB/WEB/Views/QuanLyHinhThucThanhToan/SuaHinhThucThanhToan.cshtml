@model WEB.Models.HINHTHUCTHANHTOAN
@{
    ViewBag.Title = "Sửa Hình Thức Thanh Toán ";
    Layout = "~/Views/Shared/Backend.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-container">
        <h4 style="margin:20px;">Chỉnh Sửa Thông Tin Hình Thức Thanh Toán</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaHinhThucThanhToan)
        <div class="form-group row">
            @Html.LabelFor(model => model.MaHinhThucThanhToan)
            @Html.DisplayFor(model => model.MaHinhThucThanhToan)
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.TenHinhThucThanhToan)
            @Html.EditorFor(model => model.TenHinhThucThanhToan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenHinhThucThanhToan, "", new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.MoTa)
            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = 4 })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Xác Nhận Sửa" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay Lại", "QuanLyHinhThucThanhToan", "QuanLyHinhThucThanhToan", null, new { @class = "btn-link" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

