@model WEB.Models.DANHMUC
@{
    ViewBag.Title = "SuaDanhMuc";
    Layout = "~/Views/Shared/Backend.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-container">
    <h4 style="margin:20px;">Chỉnh Sửa Thông Tin Danh Mục</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaDanhMuc)
<div class="form-group row">
    @Html.LabelFor(model => model.MaDanhMuc)
    @Html.DisplayFor(model => model.MaDanhMuc)
</div>
    <div class="form-group row">
        @Html.LabelFor(model => model.TenDanhMuc)
        @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <input type="submit" value="Xác Nhận Sửa" class="btn btn-default" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay Lại", "QuanLyDanhMuc", "QuanLyDanhMuc", null, new { @class = "btn-link" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

