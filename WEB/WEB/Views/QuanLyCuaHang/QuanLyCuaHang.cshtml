
@model IEnumerable<WEB.Models.CUAHANG>
@{
    ViewBag.Title = "Quản Lý Cửa Hàng ";
    Layout = "~/Views/Shared/Backend.cshtml";
}







<h2>Quản lý thông tin cửa hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "TaoCuaHang", "QuanLyCuaHang")
</p>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Mã Cửa Hàng 
                </th>
                <th>
                    Tên Cửa Hàng 
                </th>
                <th>
                    Địa Chỉ
                </th>
                <th>
                    Số Điện Thoại
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaCuaHang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenCuaHang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "SuaCuaHang", new { id = item.MaCuaHang }, new { @class = "btn btn-primary" })

                    @Html.ActionLink("Xóa", "XoaCuaHang", new { id = item.MaCuaHang }, new { @class = "btn btn-danger" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
