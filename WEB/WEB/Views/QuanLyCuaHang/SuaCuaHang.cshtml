@model WEB.Models.CUAHANG
@{
    ViewBag.Title = "Sửa Cửa Hàng";
    Layout = "~/Views/Shared/Backend.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-container">
    <h4 style="margin:20px;">Chỉnh Sửa Thông Tin Cửa Hàng</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaCuaHang)
    <div class="form-group row">
        @Html.LabelFor(model => model.MaCuaHang)
        @Html.DisplayFor(model => model.MaCuaHang)
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.TenCuaHang)
        @Html.EditorFor(model => model.TenCuaHang, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenCuaHang, "", new { @class = "text-danger" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.DiaChi)
        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.SoDienThoai)
        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <input type="submit" value="Xác Nhận Sửa" class="btn btn-default" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay Lại", "QuanLyCuaHang", "QuanLyCuaHang", null, new { @class = "btn-link" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

