@model WEB.Models.THUONGHIEU
@{
    ViewBag.Title = "Xoa Thuong Hieu ";
    Layout = "~/Views/Shared/Backend.cshtml";
}

<h2>Xóa Thương Hiệu </h2>

<h3>Bạn có chắc chắn muốn xóa thương hiệu này không?</h3>

<div>
    <div class="info-container">
        <h4>Thông tin thương hiệu</h4>
        <hr />
        <div class="info-row">
            <span class="info-label">@Html.DisplayNameFor(model => model.MaThuongHieu)</span>
            <span class="info-value">@Html.DisplayFor(model => model.MaThuongHieu)</span>
        </div>
        <div class="info-row">
            <span class="info-label">@Html.DisplayNameFor(model => model.TenThuongHieu)</span>
            <span class="info-value">@Html.DisplayFor(model => model.TenThuongHieu)</span>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay Lại", "QuanLyThuongHieu")
        </div>
    }
</div>