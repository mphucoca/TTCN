@model IEnumerable<WEB.Models.DONHANG>

@{
    ViewBag.Title = "Đơn Hàng Của Bạn";
}
<meta charset="UTF-8">

<p>
    <a class="btn btn-primary" href="@Url.Action("XemGioHang", "XemGioHang")">Xem Giỏ Hàng</a>
</p>

<div class="profile-info">
    <table>
        <tr>
            <th>Họ tên</th>
            <td>@ViewBag.hoten</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@ViewBag.email</td>
        </tr>
        <tr>
            <th>Số điện thoại</th>
            <td>@ViewBag.sodienthoai</td>
        </tr>
    </table>
</div>


<table class="order-table ">
    <tr>
        <th>Hình thức thanh toán</th>
        <th>Hình thức vận chuyển</th>
        <th>Ngày đặt hàng</th>
        <th>Địa chỉ</th>
        <th>Ghi chú</th>
        <th>Tình trạng thanh toán</th>
        <th>Tình trạng giao hàng</th>
        <th>Mã Giảm Giá</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.HINHTHUCTHANHTOAN.TenHinhThucThanhToan)</td>
            <td>@Html.DisplayFor(modelItem => item.HINHTHUCVANCHUYEN.TenHinhThucVanChuyen)</td>
            <td>@Html.DisplayFor(modelItem => item.NgayDatHang)</td>
            <td>@Html.DisplayFor(modelItem => item.DiaChiGiao)</td>
            <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
            <td>@Html.DisplayFor(modelItem => item.TinhTrangThanhToan)</td>
            <td>@Html.DisplayFor(modelItem => item.TinhTrangGiaoHang)</td>
            <td>@Html.DisplayFor(modelItem => item.GIAMGIA.TenGiamGia) </td>
            <td class="order-actions">@Html.ActionLink("Chi Tiết", "ChiTietDonHang", new { id = item.MaDonHang })</td>
        </tr>
    }
</table>

<style>
    /* General styling for table */
    table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
        font-family: 'Arial', sans-serif;
        font-size: 14px;
    }

    /* Profile info table styling */
    .profile-info th, .profile-info td {
        padding: 10px 15px;
        border: 1px solid #eaeaea;
    }

    .profile-info th {
        background-color: #f5f5f5;
        font-weight: bold;
        color: #333;
    }

    /* Order table styling */
    .order-table th, .order-table td {
        padding: 10px 15px;
        border: 1px solid #eaeaea;
        text-align: center;
    }

    .order-table th {
        background-color: #f5f5f5;
        font-weight: bold;
        color: #333;
    }

    .order-table tr:nth-child(even) {
        background-color: #fcfcfc;
    }

    .order-table tr:hover {
        background-color: #f1f1f1;
    }

    /* Button styling */
    .btn-primary {
        background-color: #ff5722;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #e64a19;
        }

    /* Order actions link styling */
    .order-actions a {
        text-decoration: none;
        color: #ff5722;
        font-weight: bold;
        transition: color 0.3s ease;
    }

        .order-actions a:hover {
            color: #e64a19;
        }

    /* Product table styling */
    .table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px 15px;
            border: 1px solid #eaeaea;
            text-align: center;
        }

        .table th {
            background-color: #f5f5f5;
            font-weight: bold;
            color: #333;
        }

        .table tr:nth-child(even) {
            background-color: #fcfcfc;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

        /* Responsive design for smaller screens */


        .profile-info th, .profile-info td, .order-table th, .order-table td, .table th, .table td {
            white-space: nowrap;
        }
    }
</style>