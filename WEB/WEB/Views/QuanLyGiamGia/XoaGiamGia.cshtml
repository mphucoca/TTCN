@model WEB.Models.GIAMGIA
@{
    ViewBag.Title = "Xóa Giảm Giá";
    Layout = "~/Views/Shared/Backend.cshtml";
}

<h2>Xóa Giảm Giá </h2>

<h3>Bạn có chắc chắn muốn xóa giảm giá này không?</h3>

<div>
    <div class="info-container">
        <h4>Thông tin Giảm Giá</h4>
        <hr />
        <div class="info-row">
            <span class="info-label">@Html.DisplayNameFor(model => model.MaGiamGia)</span>
            <span class="info-value">@Html.DisplayFor(model => model.MaGiamGia)</span>
        </div>
        <div class="info-row">
            <span class="info-label">@Html.DisplayNameFor(model => model.MoTa)</span>
            <span class="info-value">@Html.DisplayFor(model => model.MoTa)</span>
        </div>
        <div class="info-row">
            <span class="info-label">@Html.DisplayNameFor(model => model.TenGiamGia)</span>
            <span class="info-value">@Html.DisplayFor(model => model.TenGiamGia)</span>
        </div>
        <div class="info-row">
            <span class="info-label">@Html.DisplayNameFor(model => model.NgayBatDau)</span>
            <span class="info-value">@Html.DisplayFor(model => model.NgayBatDau)</span>
        </div>
        <div class="info-row">
            <span class="info-label">@Html.DisplayNameFor(model => model.NgayKetThuc)</span>
            <span class="info-value">@Html.DisplayFor(model => model.NgayKetThuc)</span>
        </div>
        <div class="info-row">
            <span class="info-label">@Html.DisplayNameFor(model => model.SoLuong)</span>
            <span class="info-value">@Html.DisplayFor(model => model.SoLuong)</span>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay Lại", "QuanLyGiamGia")
        </div>
    }
</div>