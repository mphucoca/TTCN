@model WEB.Models.TAIKHOAN
@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin Tài Khoản";
    Layout = "~/Views/Shared/Backend.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-container">
        <h4 style="margin:20px;">Chỉnh Sửa Thông Tin Tài Khoản</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID) <!-- Thêm trường ID ẩn vào biểu mẫu -->

        <div class="form-group">
            @Html.LabelFor(model => model.Ho)
            <!-- Sử dụng EditorFor để hiển thị giá trị từ model -->
            @Html.EditorFor(model => model.Ho, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Ten)
            @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SDT)
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau)
            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
        </div>

        <div class="form-group radio-container">
            @Html.LabelFor(model => model.PhanQuyen)
            <br />
            <!-- Sử dụng RadioButtonFor để hiển thị giá trị từ model -->
            <label>
                @Html.RadioButtonFor(model => model.PhanQuyen, "user", new { @checked = Model.PhanQuyen == "user" }) User
            </label>
            <label>
                @Html.RadioButtonFor(model => model.PhanQuyen, "admin", new { @checked = Model.PhanQuyen == "admin" }) Admin
            </label>
            @Html.ValidationMessageFor(model => model.PhanQuyen, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Sửa" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay Lại", "QuanLyTaiKhoan", "QuanLyTaiKhoan", null, new { @class = "btn-link" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
