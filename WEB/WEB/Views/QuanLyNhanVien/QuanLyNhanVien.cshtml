@model IEnumerable<WEB.Models.NHANVIEN>
@{
    ViewBag.Title = "Quản Lý Nhân Viên";
    Layout = "~/Views/Shared/Backend.cshtml";
}

<h2>Quản Lý Nhân Viên </h2>

<p>
    @Html.ActionLink("Thêm Nhân Viên", "TaoNhanVien", "QuanLyNhanVien")
</p>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Mã Nhân Viên
                </th>
                <th>
                    Họ Tên
                </th>
                
                <th>
                    Số Điện Thoại
                </th>
                <th>
                    Địa Chỉ
                </th>
                <th>
                    Cửa Hàng Làm Việc
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNhanVien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SDT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>             
                    <td>
                        @Html.DisplayFor(modelItem => item.CUAHANG.TenCuaHang)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "SuaNhanVien", new { id = item.MaNhanVien }, new { @class = "btn btn-primary" }) 

                        @Html.ActionLink("Xóa", "XoaNhanVien", new { id = item.MaNhanVien }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>